<Page x:Class="ISBD.View.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ISBD.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage"
      >

    <Page.Resources>
        <local:OsobaModel2NameConverter x:Key="osobaModel2NameConverter"></local:OsobaModel2NameConverter>
        <local:Double2Currency x:Key="double2Currency"></local:Double2Currency>
        <local:IdK2Category x:Key="idK2Category"></local:IdK2Category>
        <local:Transaction2Color x:Key="transaction2Color"></local:Transaction2Color>
        <local:Transaction2ColorForeground x:Key="transaction2ColorForeground"></local:Transaction2ColorForeground>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MaxHeight="70"></RowDefinition>
            <RowDefinition Height="1*" MaxHeight="70"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="UsersViewsChooser" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="30,10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource osobaModel2NameConverter}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Główne menu" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" />

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Margin="5" x:Name="MainMenuButton" IsEnabled="False" Content="Menu główne"/>
            <Button Grid.Column="2" Margin="5" x:Name="TransactionsButton" Content="Transakcje" />
            <Button Grid.Column="3" Margin="5" x:Name="StatsButton" Content="Statystyki" />
            <Button Grid.Column="4" Margin="5" x:Name="CategoriesButton" Content="Kategorie" />
        </Grid>

        <Border Grid.Row="2" Grid.Column="0" Background="#FF688CAF" BorderThickness="1" Margin="5">
            <DockPanel Grid.Row="2" Grid.Column="0" Margin="1"  Background="White">
                <DockPanel Dock="Top" Margin="15,0">
                    <Button DockPanel.Dock="Left" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Polygon Points="10,15 0,8 10,0" Stroke="Black"/>
                    </Button>
                    <Button DockPanel.Dock="Right" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Polygon Points="0,15 10,8 0,0" Stroke="Black"/>
                    </Button>
                    <TextBlock Text="Październik" TextAlignment="Center" />
                </DockPanel>
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Przychody" Grid.Row="0" Grid.Column="1"/>
                    <TextBlock Text="15000zł" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right"/>
                    <TextBlock Text="Wydatki" Grid.Row="1" Grid.Column="1"/>
                    <TextBlock Text="8320zł" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right"/>
                    <Border Height="1" BorderThickness="0,1,0,0" BorderBrush="#FF454546" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,0,15,0" />
                    <TextBlock Text="Saldo" Grid.Row="3" Grid.Column="1"/>
                    <TextBlock Text="8320zł" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right"/>
                    <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Height="10" Margin="-15,5" CornerRadius="8">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                <GradientStop x:Name="IncomesSlider" Color="#FF74FF00" Offset="0.74"/>
                                <GradientStop x:Name="ExpensesSlider" Color="#FFFF5100" Offset="0.77"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>
                <Border Height="1" DockPanel.Dock="Top" BorderThickness="0,1,0,0" BorderBrush="#FF454546" Margin="15,0" />
                <ScrollViewer x:Name="MonthScrollViewer" VerticalScrollBarVisibility="Auto">
                    <ListView>

                    </ListView>
                </ScrollViewer>

            </DockPanel>
        </Border>


        <DataGrid x:Name="HistoryTable" Grid.Row="2" Grid.Column="1" Margin="5" AutoGenerateColumns="False" SelectionMode="Single" 
                  CommandManager.PreviewExecuted="DriversDataGrid_PreviewDeleteCommandHandler">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data" Width="*"  Binding="{Binding Data}"/>
                <DataGridTextColumn Header="Tytuł" Width="3*" Binding="{Binding Tytul}"/>
                <DataGridComboBoxColumn Header="Kategoria" x:Name="DataGridComboBoxColumn" Width="2*" SelectedValueBinding="{Binding Path=IdK, Converter={StaticResource idK2Category}}"/>
                <DataGridTextColumn Header="Kwota" Width="2*" Binding="{Binding Path=Kwota, Converter={StaticResource double2Currency}}" />
                <DataGridTextColumn Header="Opis" Width="*" Binding="{Binding Opis}" />
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Opis}" Margin="10" />
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{Binding Converter={StaticResource transaction2Color}}" />
                    <Setter Property="Foreground" Value="{Binding Converter={StaticResource transaction2ColorForeground}}" />
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</Page>
